---
import { AIChat } from './AIChat';
---

<aside class="ai-panel" id="ai-panel">
  <div class="ai-panel-header">
    <div class="ai-title">
      <svg
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="ai-sparkle"
      >
        <path
          d="m12 3-1.912 5.813a2 2 0 0 1-1.275 1.275L3 12l5.813 1.912a2 2 0 0 1 1.275 1.275L12 21l1.912-5.813a2 2 0 0 1 1.275-1.275L21 12l-5.813-1.912a2 2 0 0 1-1.275-1.275L12 3Z"
        ></path>
        <path d="M5 3v4"></path>
        <path d="M19 17v4"></path>
        <path d="M3 5h4"></path>
        <path d="M17 19h4"></path>
      </svg>
      <span class="ai-title-text">AI Assistant</span>
    </div>
    <button
      class="ai-collapse-toggle"
      id="ai-collapse-toggle"
      aria-label="Toggle AI Assistant panel"
      aria-expanded="true"
      aria-controls="ai-panel-content"
      type="button"
    >
      <svg
        class="chevron-icon"
        width="16"
        height="16"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="m15 18-6-6 6-6"></path>
      </svg>
    </button>
  </div>

  <div class="ai-panel-content" id="ai-panel-content">
    <AIChat client:load />
  </div>
</aside>

<script>
  // AI Panel Collapse/Expand functionality with localStorage persistence
  const AI_PANEL_STATE_KEY = 'ai-panel-collapsed';

  function initAIPanelCollapse() {
    const panel = document.getElementById('ai-panel');
    const toggle = document.getElementById('ai-collapse-toggle');
    const content = document.getElementById('ai-panel-content');

    if (!panel || !toggle || !content) return;

    // Restore state from localStorage
    const isCollapsed = localStorage.getItem(AI_PANEL_STATE_KEY) === 'true';

    if (isCollapsed) {
      panel.classList.add('collapsed');
      toggle.setAttribute('aria-expanded', 'false');
    }

    // Toggle collapse/expand
    toggle.addEventListener('click', () => {
      const willCollapse = !panel.classList.contains('collapsed');

      panel.classList.toggle('collapsed');
      toggle.setAttribute('aria-expanded', (!willCollapse).toString());

      // Save state to localStorage
      localStorage.setItem(AI_PANEL_STATE_KEY, willCollapse.toString());
    });
  }

  // Initialize on page load
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initAIPanelCollapse);
  } else {
    initAIPanelCollapse();
  }

  // Re-initialize after Astro view transitions
  document.addEventListener('astro:after-swap', initAIPanelCollapse);
</script>

<style>
  .ai-panel {
    width: var(--layout-ai-panel-width);
    height: calc(100vh - var(--layout-header-height));
    position: sticky;
    top: var(--layout-header-height);
    background-color: var(--color-bg-secondary);
    border-left: 1px solid var(--color-border);
    display: flex;
    flex-direction: column;
    overflow: hidden;
    transition: width var(--duration-slower) var(--ease-in-out);
  }

  /* Collapsed state */
  .ai-panel.collapsed {
    width: 56px;
  }

  .ai-panel-header {
    padding: var(--space-7) var(--space-6);
    border-bottom: 1px solid var(--color-border);
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-3);
  }

  .ai-title {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    color: var(--color-text-primary);
    overflow: hidden;
  }

  .ai-title-text {
    white-space: nowrap;
    opacity: 1;
    transition: opacity var(--duration-normal) var(--ease-out);
  }

  .ai-panel.collapsed .ai-title-text {
    opacity: 0;
    width: 0;
  }

  .ai-sparkle {
    color: var(--color-ai-primary);
    animation: sparkle 2s ease-in-out infinite;
    flex-shrink: 0;
  }

  @keyframes sparkle {
    0%, 100% { opacity: 1; transform: scale(1); }
    50% { opacity: 0.7; transform: scale(1.05); }
  }

  /* Toggle button */
  .ai-collapse-toggle {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    padding: 0;
    background: transparent;
    border: none;
    border-radius: var(--radius-md);
    color: var(--color-text-muted);
    cursor: pointer;
    transition: all var(--duration-normal) var(--ease-out);
    flex-shrink: 0;
  }

  .ai-collapse-toggle:hover {
    background: var(--color-bg-tertiary);
    color: var(--color-text-primary);
  }

  .ai-collapse-toggle:active {
    transform: scale(0.95);
  }

  .ai-collapse-toggle:focus-visible {
    outline: 2px solid var(--color-border-focus);
    outline-offset: 2px;
  }

  .chevron-icon {
    transition: transform var(--duration-slower) var(--ease-in-out);
  }

  .ai-panel.collapsed .chevron-icon {
    transform: rotate(180deg);
  }

  /* Panel content */
  .ai-panel-content {
    flex: 1;
    overflow: hidden;
    opacity: 1;
    transition: opacity var(--duration-slow) var(--ease-out);
  }

  .ai-panel.collapsed .ai-panel-content {
    opacity: 0;
    pointer-events: none;
  }

  /* AI Chat Container */
  :global(.ai-chat-container) {
    flex: 1;
    display: flex;
    flex-direction: column;
    overflow: hidden;
  }

  :global(.ai-messages) {
    flex: 1;
    overflow-y: auto;
    padding: var(--space-6);
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }

  :global(.ai-message) {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }

  :global(.message-content) {
    padding: var(--space-3) var(--space-4);
    border-radius: var(--radius-lg);
    font-size: var(--text-sm);
    line-height: var(--leading-relaxed);
  }

  :global(.ai-message.user .message-content) {
    background-color: var(--color-accent-blue);
    color: white;
    margin-left: auto;
    max-width: 85%;
  }

  :global(.ai-message.assistant .message-content),
  :global(.ai-message.system .message-content) {
    background-color: var(--color-bg-tertiary);
    color: var(--color-text-primary);
    max-width: 85%;
  }

  :global(.ai-message.system .message-content) {
    background-color: rgba(97, 175, 239, 0.1);
    border: 1px solid var(--color-border);
    color: var(--color-text-secondary);
  }

  :global(.message-content.loading) {
    display: flex;
    gap: var(--space-2);
    padding: var(--space-4);
  }

  :global(.loading-dot) {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: var(--color-text-muted);
    animation: loading-bounce 1.4s infinite ease-in-out both;
  }

  :global(.loading-dot:nth-child(1)) {
    animation-delay: -0.32s;
  }

  :global(.loading-dot:nth-child(2)) {
    animation-delay: -0.16s;
  }

  @keyframes loading-bounce {
    0%,
    80%,
    100% {
      transform: scale(0);
    }
    40% {
      transform: scale(1);
    }
  }

  :global(.ai-input-container) {
    padding: var(--space-4) var(--space-6);
    border-top: 1px solid var(--color-border);
    flex-shrink: 0;
    background-color: var(--color-bg-secondary);
  }

  :global(.ai-input-form) {
    display: flex;
    gap: var(--space-2);
    align-items: center;
  }

  :global(.ai-input) {
    flex: 1;
    padding: var(--space-3);
    background-color: var(--color-bg-primary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-md);
    color: var(--color-text-primary);
    font-size: var(--text-sm);
    font-family: var(--font-sans);
    transition: all var(--duration-normal) var(--ease-out);
    min-height: 40px;
  }

  :global(.ai-input:focus) {
    outline: none;
    border-color: var(--color-ai-primary);
    box-shadow: 0 0 0 3px rgba(86, 182, 194, 0.1);
  }

  :global(.ai-input::placeholder) {
    color: #B8B8B8 !important;
  }

  :global(.ai-input:disabled) {
    opacity: 0.6;
    cursor: not-allowed;
  }

  :global(.ai-send-button) {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background-color: var(--color-accent-blue);
    color: white;
    border: none;
    border-radius: var(--radius-md);
    cursor: pointer;
    transition: all var(--duration-normal) var(--ease-out);
    flex-shrink: 0;
  }

  :global(.ai-send-button:hover:not(:disabled)) {
    background-color: var(--color-accent-cyan);
    box-shadow: var(--shadow-blue);
  }

  :global(.ai-send-button:active:not(:disabled)) {
    transform: translateY(1px);
  }

  :global(.ai-send-button:disabled) {
    opacity: 0.5;
    cursor: not-allowed;
  }

  /* Responsive */
  @media (max-width: 1280px) {
    .ai-panel {
      display: none;
    }
  }
</style>
